{
  "preReleaseId": "next",
  "git": {
    "commitMessage": "chore: ${version}",
    "tagAnnotation": "${version}",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "tokenRef": "GITHUB_TOKEN",
    "draft": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    },
    "@release-it/bumper": {
      "out": [
        "package.json"      ]
    }
  }
}
